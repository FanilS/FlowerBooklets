<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivFlower"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_not_found_en" />

    <TextView
        android:id="@+id/tv_flower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivFlower"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/custom_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size"
        tools:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_blossom_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivFlower"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/custom_margin"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/white"
        android:textSize="@dimen/secondary_text_size"
        tools:text="@string/app_name" />

</RelativeLayout>